{
  "name": "FrogeeCodeIDE",
  "version": "1.0.0",
  "description": "A modern code editor with AI chat integration, built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "code-editor",
    "ai-chat",
    "markdown",
    "openrouter",
    "ollama"
  ],
  "author": "arduradiokot",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "marked": "^9.1.6"
  },
  "build": {
    "appId": "com.arduradiokot.frogeecodeide",
    "productName": "FrogeeCodeIDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "images/icon.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "images/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "title": "FrogeeCodeIDE"
    }
  }
}
